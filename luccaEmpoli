  <script>
    const map = L.map('map').setView([43.7167, 10.9333], 10); // Centered between Lucca and Empoli

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; OpenStreetMap contributors'
    }).addTo(map);

    const routePoints = [
      [43.8509, 10.5086], // Lucca
      [43.8167, 10.6333], // Capannori
      [43.8161, 10.6764], // Altopascio
      [43.7414, 10.7986], // Fucecchio
      [43.7167, 10.9333]  // Empoli
    ];

    const routeLine = L.polyline(routePoints, { color: 'green' }).addTo(map);
    map.fitBounds(routeLine.getBounds());
  </script>
